@model Client

<div class="modal-content">
    <div class="modal-header">
        <h4>Удаление клиента</h4>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <form asp-controller="ListClients" asp-action="DeletePost" method="post">
            <input asp-for="Id" hidden/>
            <div class="form-group ">
                <label asp-for="FIO">ФИО:</label>
                <input asp-for="FIO" type="text"class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Job">Организация:</label>
                <input asp-for="Job" type="text"class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle">Должность:</label>
                <input asp-for="JobTitle" type="text"class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Contacts">Контакты:</label>
                <input asp-for="Contacts" type="text"class="form-control" readonly/>
            </div>
            <div class="form-btn-add">
                <button type="submit" class="btn btn-primary button_action" data-add="modal">Удалить</button>
            </div>
        </form>
    </div>
</div>